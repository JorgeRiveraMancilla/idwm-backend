# ============================================
# Tienda UCN API - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# In ASP.NET Core, variables with __ are automatically mapped to nested configuration sections
# Example: CLOUDINARY__CLOUD_NAME maps to Configuration["Cloudinary:CloudName"]

# ============================================
# Serilog Configuration
# ============================================
# Minimum log level: Verbose, Debug, Information, Warning, Error, Fatal
SERILOG__MINIMUM_LEVEL="Information"
# Output template for console logs
SERILOG__OUTPUT_TEMPLATE="[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"

# ============================================
# Database Configuration
# ============================================
# DATABASE_CONNECTION_STRING accepts postgres:// format or standard connection string format
# Format for DATABASE_CONNECTION_STRING: postgres://user:password@host:port/database
# Or standard format: Host=host;Port=port;Database=database;Username=user;Password=password;SSL Mode=Require;Trust Server Certificate=true
DATABASE_CONNECTION_STRING=""

# ============================================
# Authentication & Security
# ============================================
# JWT Secret - Must be at least 32 characters long
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long"

# ============================================
# Email Service (Resend)
# ============================================
# Get your API key from: https://resend.com/docs/send-with-dotnet
RESEND_API_KEY="re_your_resend_api_key_here"

# ============================================
# Cloudinary Configuration
# ============================================
# Get your credentials from: https://cloudinary.com/
CLOUDINARY__CLOUD_NAME="your_cloudinary_cloud_name"
CLOUDINARY__API_KEY="your_cloudinary_api_key"
CLOUDINARY__API_SECRET="your_cloudinary_api_secret"

# ============================================
# CORS Configuration
# ============================================
# Allowed origins - comma-separated list (no spaces)
# Example: http://localhost:3000,https://your-frontend-domain.com
CORS__ALLOWED_ORIGINS="https://your-frontend-domain.com"
# Allowed HTTP methods - comma-separated list
CORS__ALLOWED_METHODS="GET,POST,PUT,DELETE,PATCH,OPTIONS"
# Allowed headers - use "*" for all or comma-separated list
CORS__ALLOWED_HEADERS="*"

# ============================================
# Identity Configuration
# ============================================
# Characters allowed in usernames
IDENTITY_CONFIGURATION__ALLOWED_USER_NAME_CHARACTERS="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789-._@+"

# ============================================
# Hangfire Dashboard Configuration
# ============================================
# Path where the Hangfire dashboard will be accessible
HANGFIRE_DASHBOARD__DASHBOARD_PATH="/hangfire"
# Title displayed in the Hangfire dashboard
HANGFIRE_DASHBOARD__DASHBOARD_TITLE="Panel de Control de Hangfire"
# Stats polling interval in milliseconds
HANGFIRE_DASHBOARD__STATS_POLLING_INTERVAL="5000"
# Whether to display the storage connection string in the dashboard (true/false)
HANGFIRE_DASHBOARD__DISPLAY_STORAGE_CONNECTION_STRING="false"

# ============================================
# Background Jobs Configuration
# ============================================
# Cron expression for deleting unconfirmed users (format: minute hour day month dayofweek)
# Example: "50 20 * * *" = daily at 20:50
JOBS__CRON_JOB_DELETE_UNCONFIRMED_USERS="50 20 * * *"
# Time zone for scheduled jobs (use Windows time zone ID)
# Examples: "Pacific SA Standard Time", "UTC", "Eastern Standard Time"
JOBS__TIME_ZONE="Pacific SA Standard Time"
# Number of days before deleting unconfirmed users
JOBS__DAYS_OF_DELETE_UNCONFIRMED_USERS="7"

# ============================================
# Verification Code Configuration
# ============================================
# Expiration time for email verification codes in minutes
VERIFICATION_CODE__EXPIRATION_TIME_IN_MINUTES="3"

# ============================================
# Email Configuration
# ============================================
# Email address to send emails from (must be verified in Resend)
EMAIL_CONFIGURATION__FROM="noreply@yourdomain.com"
# Subject for verification code emails
EMAIL_CONFIGURATION__VERIFICATION_SUBJECT="Tu código de verificación"
# Subject for welcome emails
EMAIL_CONFIGURATION__WELCOME_SUBJECT="Bienvenido a Tienda UCN"

# ============================================
# Products Configuration
# ============================================
# Default page size for product listings
PRODUCTS__DEFAULT_PAGE_SIZE="10"
# Default image URL to use when a product has no images
PRODUCTS__DEFAULT_IMAGE_URL="https://shop.songprinting.com/global/images/PublicShop/ProductSearch/prodgr_default_300.png"
# Threshold for "few units available" warning
PRODUCTS__FEW_UNITS_AVAILABLE="15"
# Allowed image file extensions (array with indexed keys)
PRODUCTS__IMAGE_ALLOWED_EXTENSIONS__0=".jpg"
PRODUCTS__IMAGE_ALLOWED_EXTENSIONS__1=".jpeg"
PRODUCTS__IMAGE_ALLOWED_EXTENSIONS__2=".png"
PRODUCTS__IMAGE_ALLOWED_EXTENSIONS__3=".webp"
# Maximum image file size in bytes (5242880 = 5MB)
PRODUCTS__IMAGE_MAX_SIZE_IN_BYTES="5242880"
# Image transformation width in pixels
PRODUCTS__TRANSFORMATION_WIDTH="1000"
# Image transformation crop mode (scale, fill, fit, etc.)
PRODUCTS__TRANSFORMATION_CROP="scale"
# Image transformation quality (auto:best, auto:good, auto:eco, etc.)
PRODUCTS__TRANSFORMATION_QUALITY="auto:best"
# Image transformation fetch format (auto, jpg, png, webp, etc.)
PRODUCTS__TRANSFORMATION_FETCH_FORMAT="auto"

# ============================================
# Cookie Configuration
# ============================================
# Number of days before the cart cookie expires
COOKIE_EXPIRATION_DAYS="30"

# ============================================
# User Admin Configuration (for DataSeeder)
# ============================================
# These are used only during initial database seeding
# Admin user first name
USER__ADMIN_USER__FIRST_NAME="Admin"
# Admin user last name
USER__ADMIN_USER__LAST_NAME="User"
# Admin user email
USER__ADMIN_USER__EMAIL="admin@tiendaucn.com"
# Admin user RUT (Chilean ID format: XXXXXXXX-X)
USER__ADMIN_USER__RUT="12345678-9"
# Admin user birth date (format: YYYY-MM-DD)
USER__ADMIN_USER__BIRTH_DATE="1990-01-01"
# Admin user phone number (format: +569XXXXXXXX)
USER__ADMIN_USER__PHONE_NUMBER="+56912345678"
# Admin user password (must meet password requirements: min 8 chars, at least one digit)
USER__ADMIN_USER__PASSWORD="YourSecurePassword123!"
# Password for randomly generated test users (used by DataSeeder)
USER__RANDOM_USER_PASSWORD="TestUserPassword123!"
